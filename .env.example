# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Google Gemini API 설정
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Anthropic Claude 설정
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-0

# LangChain 설정
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=StoryMate RAG 챗봇

# Qdrant 벡터 데이터베이스 설정 -
# Qdrant client 사용해서 URL과 KEY를 활용하다면 수정필요
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=https://localhost:6333


QDRANT_COLLECTION_NAME=storymate_documents

# Qdrant 타임아웃 설정
QDRANT_TIMEOUT=300

# 문서 처리 설정
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=8007

# 검색 성능 최적화 설정
MAX_SEARCH_TIME=8

# 모델 설정
TEMPERATURE=0.0

# 의도 분석용 모델 설정
INTENT_ANALYSIS_MODEL=gpt-4o
INTENT_ANALYSIS_FALLBACK_MODEL=gpt-4o-mini

# 답변 생성용 모델 설정
ANSWER_GENERATION_MODEL=gpt-4o

# 채팅 API 기본 모델
DEFAULT_CHAT_MODEL=gpt-4o

# 디버깅 모드 설정
DEBUG=true
